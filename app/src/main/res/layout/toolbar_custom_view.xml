<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textview_title"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@bool/align_top_true"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/textview_empty"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_title"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/textview_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_below="@+id/textview_empty"/>

    <TextView
        android:id="@+id/textview_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@+id/textview_rating"/>


    <ImageButton
        android:padding="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/image_rounded_corner"
        android:id="@+id/image_button_favourite"
        android:clickable="true"
        android:onClick="onFavouriteClick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="@bool/align_top_true"
        android:layout_alignParentRight="@bool/align_right_true"
        android:layout_alignParentEnd="@bool/align_right_true"
        android:contentDescription="@string/favourite_button"
        android:src="@drawable/favourite_icon" />

</RelativeLayout>
